{
    "version": 2,
    "builds": [
      {
        "src": "frontend/app/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/app/build"  }
      },
      {
        "src": "backend/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/backend/src/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/app/build/$1"
      }
    ]
  }